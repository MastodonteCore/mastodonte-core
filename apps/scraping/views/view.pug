extends ../../../views/layout

block styles
  style.
    @page {
      size: A4;
      margin: 17mm;
    }

block content
  .page-header
    h2= scrap.name

  .hidden-print
    .btn-group.btn-group-justified
      a.btn.btn-primary(href=baseurl + "/edit/" + scrap._id)
        i.fa.fa-pencil-square-o
        | &nbsp;
        | Edit
      a.btn.btn-danger(href=baseurl + "/delete/" + scrap._id)
        i.fa.fa-eraser
        | &nbsp;
        | Delete

    hr

    .btn-group.pull-right
      button.btn.btn-default.btn-sm.btn-print(type="button")
        i.fa.fa-print
        | &nbsp;
        | Print
      a.btn.btn-default.btn-sm(href=baseurl + "/" + scrap._id + "/pdf")
        i.fa.fa-file-pdf-o
        | &nbsp;
        | Export to pdf
    .clearfix

    hr

  div.columns-sm-3.columns-print-2
    each el in html
      div !{el}

block scripts
  script(src=baseurl + "/js/main.js")