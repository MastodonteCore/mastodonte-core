extends ../layout

block content
  h2 List Websites
  hr

  .btn-group.btn-group-justified
    a.btn.btn-primary(href='/scraping/new')
      i.fa.fa-newspaper-o
      | &nbsp;
      | New Website

  .row
    each scrap in scraps
      .col-sm-4
        a(href='/scraping/' + scrap.id, style='color: #fff')
          .panel.panel-default(style='background-color: #ff6500')
            .panel-body
              span= scrap.name
